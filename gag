local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local player = Players.LocalPlayer
local diamondsAttr = "Diamonds"

-- H√†m random target
local function newTarget()
    return math.random(1000, 1300)
end

-- Target Diamonds cho acc n√†y
local targetDiamonds = newTarget()
print("üéØ Target Diamonds cho acc n√†y l√†:", targetDiamonds)

-- H√†m ki·ªÉm tra Diamonds
local function checkDiamonds()
    local diamonds = player:GetAttribute(diamondsAttr) or 0
    if diamonds >= targetDiamonds then
        print("‚úÖ ƒê·∫°t ƒëi·ªÅu ki·ªán:", diamonds, " / Target:", targetDiamonds)

        -- Ghi file ƒë√°nh d·∫•u ƒë√£ xong
        writefile(player.Name .. ".txt", "Completed-Done")

        -- ƒê·ªïi acc (teleport l·∫°i game -> yummy auto s·∫Ω login acc kh√°c)
        TeleportService:Teleport(game.PlaceId, player)
    else
        print("‚ùå Ch∆∞a ƒë·ªß Diamonds:", diamonds, " / Target:", targetDiamonds)
    end
end

-- Check ngay khi load
checkDiamonds()

-- Check m·ªói khi Diamonds thay ƒë·ªïi
player:GetAttributeChangedSignal(diamondsAttr):Connect(checkDiamonds)

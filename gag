local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Hàm ghi file báo hiệu cho Yummy Auto
local function writefileyummy()
    writefile(player.Name .. ".txt", "Completed-Done")
    print("📂 Ghi file cho Yummy Auto: " .. player.Name .. ".txt")
end

-- Hàm kiểm tra Diamonds
local function checkDiamonds()
    local diamonds = player:GetAttribute("Diamonds") or 0
    if diamonds >= 1000 then
        print("✅ Acc này có đủ Diamonds:", diamonds)
        writefileyummy()
    else
        print("❌ Chưa đủ Diamonds. Hiện tại:", diamonds)
    end
end

-- Lắng nghe khi Diamonds thay đổi
player:GetAttributeChangedSignal("Diamonds"):Connect(checkDiamonds)

-- Kiểm tra ngay khi join
checkDiamonds()

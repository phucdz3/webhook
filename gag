local Players = game:GetService("Players")
local player = Players.LocalPlayer
local DiamondLimit = 2000 -- 💎 chỉnh mức kim cương cần để đổi acc

-- Lấy số kim cương từ GUI
local function getDiamonds()
    local gui = player:WaitForChild("PlayerGui", 10)
    if gui and gui:FindFirstChild("DiamondCount") then
        local diamondObj = gui.DiamondCount
        if diamondObj:IsA("TextLabel") or diamondObj:IsA("TextButton") then
            local num = tonumber(diamondObj.Text)
            return num or 0
        end
    end
    return 0
end

-- Đổi acc (kick + tạo file báo hiệu)
local function changeAccount()
    writefile(player.Name .. "_Done.txt", "Completed - Enough Diamonds")
    player:Kick("Enough Diamonds! Switching account...")
end

-- Vòng lặp kiểm tra
spawn(function()
    while task.wait(5) do
        local diamonds = getDiamonds()
        print("Diamonds:", diamonds)
        if diamonds >= DiamondLimit then
            changeAccount()
            break
        end
    end
end)

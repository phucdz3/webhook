local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- HÃ m ghi file bÃ¡o hiá»‡u cho Yummy Auto
local function writefileyummy()
    writefile(player.Name .. ".txt", "Completed-Done")
    print("ğŸ“‚ Ghi file cho Yummy Auto: " .. player.Name .. ".txt")
end

-- HÃ m kiá»ƒm tra Diamonds
local function checkDiamonds()
    local diamonds = player:GetAttribute("Diamonds") or 0
    if diamonds >= 1000 then
        print("âœ… Acc nÃ y cÃ³ Ä‘á»§ Diamonds:", diamonds)
        writefileyummy()
    else
        print("âŒ ChÆ°a Ä‘á»§ Diamonds. Hiá»‡n táº¡i:", diamonds)
    end
end

-- Láº¯ng nghe khi Diamonds thay Ä‘á»•i
player:GetAttributeChangedSignal("Diamonds"):Connect(checkDiamonds)

-- Kiá»ƒm tra ngay khi join
checkDiamonds()

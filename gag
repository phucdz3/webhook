local player = game.Players.LocalPlayer
local diamondsAttr = "Diamonds"

-- Random 1 giá trị cần đạt từ 1000 - 1300
local targetDiamonds = math.random(1000, 1300)

-- Hàm kiểm tra Diamonds
local function checkDiamonds()
    local diamonds = player:GetAttribute(diamondsAttr) or 0
    if diamonds >= targetDiamonds then
        print("✅ Acc này có đủ Diamonds:", diamonds, "(Target:", targetDiamonds, ")")
        -- Ghi file báo đã xong
        writefile(player.Name .. ".txt", "Completed-Done")
        -- Change acc
        game:GetService("TeleportService"):Teleport(game.PlaceId, player)
    else
        print("❌ Chưa đủ Diamonds:", diamonds, "(Target:", targetDiamonds, ")")
    end
end

-- Kiểm tra ngay khi load
checkDiamonds()

-- Kiểm tra khi Diamonds thay đổi
player:GetAttributeChangedSignal(diamondsAttr):Connect(checkDiamonds)
